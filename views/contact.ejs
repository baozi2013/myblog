<%- include header %>
<div class="container">
    <h1 class="writer"><%= title%></h1>
    <div class="row main">
        <div class="col-xs-6">
            <form class="form-horizontal" method="POST" action="////formspree.io/zth198814@gmail.com">
                <div class="form-group">
                    <label class="control-label col-xs-2" for="_replyto">Email:</label>
                    <div class="col-xs-10">
                        <input class="form-control" type="email" name="_replyto" placeholder="Your email">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-xs-2" for="message">Message:</label>
                    <div class="col-xs-10">
                        <textarea class="form-control" name="message" rows="5" placeholder="Your message"></textarea>
                    </div>
                </div>
                <input type="hidden" name="_next" value="http://formspree.io/thanks"/>
                <input type="text" name="_gotcha" style="display:none">
                <div class="form-group">
                    <div class="col-xs-offset-2 col-xs-10">
                        <button class="btn btn-default" type="submit">Send Message</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-xs-6 text-center">
            <p>
                You can also visit my Github or download my resume
            </p>
            <a class="btn btn-default" href="/resume.pdf" download="tianhengzhou.pdf">Download Resume</a>
            <a class="btn btn-default" href="https://github.com/tianhengzhou"><i class="fa fa-github"></i>Github Profile</a>
        </div>
    </div>
</div>
<%- include footer %>