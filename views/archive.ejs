<%- include header %>
<div ng-app="myApp">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div ng-controller="customersCtrl">
                    <div class="row ">
                        <div class="col-sm-3 ">
                            <div class="col-sm-12">
                                <label for="search">Search Content:</label>
                                <input type="text" ng-model="query" id="search" class="form-control" placeholder="Search text"/>
                            </div>
                            <div class="col-sm-12">
                                <label for="pageSize">items per page:</label>
                                <input id='pageSize'type="number" min="1" max="100" class="form-control" ng-model="pageSize"/>
                            </div>
                            <div class="col-sm-12 category">
                                <div class="panel panel-primary">
                                    <div class="panel-heading">Categories</div>
                                    <div class="panel-body">
                                        <div class="col-sm-offset-1 col-sm-12">
                                            <ul class="list-unstyled">
                                                <li>
                                                    <a ng-click="categoryquery('')" class="btn btn-default">All</a>
                                                </li>
                                                <li ng-repeat="category in categories">
                                                    <a ng-click="categoryquery(category)" class="btn btn-default">{{ category }}</a>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-8">
                            <div class="panel panel-primary">
                                <div class="panel-heading">All Posts</div>
                                <div class="panel-body">
                                    <ul class="list-unstyled">
                                        <li dir-paginate="post in posts | filter:{content:query} | filter:{category: categoryq} | itemsPerPage: pageSize" current-page="currentPage">
                                            <h4>{{post.title}}</h4>
                                            <span class="label label-danger">{{post.category}}</span>
                                            <p>{{post.content | limitTo: 10}}...</p>
                                        </li>
                                    </ul>
                                </div>
                                <div class="text-center">
                                    <dir-pagination-controls boundary-links="true" template-url="dirPagination.tpl.html"></dir-pagination-controls>
                                </div>
                            </div>
                        </div>

                    </div>

                </div>

            </div>
        </div>
    </div>

<%- include footer %>